<html>
    <body>
        <div class="erros">
            <%if (errosValidacao) {%>
                <ul>
                    <%for(var i = 0; i < errosValidacao.length; i++) {%>
                        <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
                    <%}%>
                </ul>
            <%}%>
        </div>
        <form action="/produtos" method="post">
            <div>
                <label for="titulo">Titulo</label>
                <input type="text" id="titulo" name="titulo" value="<%=produto.titulo%>" placeholder="Titulo do livro" />
            </div>
            <div>
                <label for="preco">Preço</label>
                <input type="text" id="titulo" name="preco" value="<%=produto.preco%>" placeholder="140.25" />
            </div>
            <div>
                <label for="descricao">Descrição</label>
                <textarea cols="20" rows="10" id="descricao" value="<%=produto.descricao%>" name="descricao" placeholder="Fale do livro"></textarea>
            </div>

            <input type="submit" value="Gravar" />
        </form>
    </body>
</html>